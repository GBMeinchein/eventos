<p id="notice"><%= notice %></p>

<h1>Listing Confirmados</h1>

<table>
  <thead>
    <tr>
      <th>Evento</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmados.each do |confirmado| %>
      <tr>
        <td><%= confirmado.evento_id %></td>
        <td><%= confirmado.login_id %></td>
        <td><%= link_to 'Show', confirmado %></td>
        <td><%= link_to 'Edit', edit_confirmado_path(confirmado) %></td>
        <td><%= link_to 'Destroy', confirmado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Confirmado', new_confirmado_path %>
