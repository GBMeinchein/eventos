<%- model_class = Evento -%>

<table class="table table-striped">
  <thead>
    <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
              <%= form_tag(eventos_path, :method => "get", class: "navbar-form", id: "search-form") do %>
                <div class="input-append">
                  <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Buscar eventos" %>
                  <%= select_tag :estadoSearch, options_from_collection_for_select(Estado.all.collect, 'id', 'nome'), include_blank: true%>   
                  <%= select_tag :cidadeSearch, options_from_collection_for_select(Cidade.all.collect, 'id', 'nome'), include_blank: true%>                                  
                  <%= select_tag :searchlocal, options_from_collection_for_select(Local.all.collect, 'id', 'nome'), include_blank: true%>

                  <button type="submit" class="btn btn-default">Buscar</button>
                </div>
              <% end %>
              <%= yield %>
          </ul>
        </div>
      </div>
    </div> 
  </thead>
 <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= image_tag(evento.imagem_url, :width => 100, :hight => 200) if evento.imagem.present? %></td>
        <td>  

          <dt><strong><%= model_class.human_attribute_name(:titulo) %>:</strong></dt>
          <dd><%= evento.titulo %></dd>
          <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
          <dd><%= evento.local.nome if evento.local.present? %></dd>          
          <dt><strong><%= model_class.human_attribute_name(:inicio) %>:</strong></dt>
          <dd><%= evento.inicio %></dd>
          <dt><strong><%= model_class.human_attribute_name(:termino) %>:</strong></dt>
          <dd><%= evento.termino %></dd>
          <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
          <dd><%= evento.descricao %></dd>          
        <td>
          <%= link_to t('listar', :default => t("helpers.links.show")),
                      evento, :class => 'btn btn-default btn-xs' %>          
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_evento_path(evento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      evento_path(evento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_evento_path,
            :class => 'btn btn-primary' %>
