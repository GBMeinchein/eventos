<%- model_class = Evento -%>

    <div class="container">
      <div class="row">

       <div class="col-lg-3">

        <%= link_to t('.new', :default => t("helpers.links.new")),
            new_evento_path,
            :class => "btn btn-info btn-block login", :style => "width: 265px;" %>
            <br>
        <%= form_tag(eventos_path, :method => "get",  id: "search-form") do %>
          <div class="list-group">
            <li href="#" class="list-group-item active">
              Filtros
            </li>
            <li class="list-group-item"><%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar eventos" %></li>
            <li class="list-group-item"><%= select_tag :estadoSearch, options_from_collection_for_select(Estado.all.collect, 'id', 'nome'), {:include_blank => '- Estado -', :style => "width: 200px;"}%></li>
            <li class="list-group-item"><%= select_tag :cidadeSearch, options_from_collection_for_select(Cidade.all.collect, 'id', 'nome'), {:include_blank => '- Cidade -', :style => "width: 200px;"}%></li>
            <li href="#" class="list-group-item"><%= select_tag :searchlocal, options_from_collection_for_select(Local.all.collect, 'id', 'nome'), {:include_blank => '- Local -', :style => "width: 200px;"}%></li>
            <li class="list-group-item"><button type="submit" class="btn btn-default">Buscar</button></>          
          </div>
          <% end %>
          <%= yield %>
        </div>

<div class="col-lg-9">
  <%= bootstrap_flash %>
          
      <div class="panel panel-default">

      <table class="table table-striped">
       <tbody>
          <% @eventos.each do |evento| %>
            <tr>
              <td><%= image_tag(evento.imagem_url, :width => 100, :hight => 200) if evento.imagem.present? %></td>
              <td>  
                <h3><%= evento.titulo %></h3>
                <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
                <dd><%= evento.local.nome if evento.local.present? %></dd>          
                <dt><strong><%= model_class.human_attribute_name(:inicio)%>:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</strong>
                <strong><%= model_class.human_attribute_name(:termino) %>:</strong><dt>
                <dd><%= evento.inicio.to_formatted_s(:db) %>&nbsp;&nbsp;&nbsp;&nbsp;
                <%= evento.termino.to_formatted_s(:db) %></dd>
                <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
                <dd><%= evento.descricao %></dd>          
              <td>

                <div class="btn-group-vertical" role="group" aria-label="...">

              <%= button_to "Eu Vou!", { :controller => "confirmados", :action => "create", :evento_id => evento.id} %>


                <br>

                <%= link_to t('listar', :default => t("helpers.links.show")),
                            evento, :class => 'btn btn-default btn-xl' %>          
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_evento_path(evento), :class => 'btn btn-default btn-xl' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            evento_path(evento),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xl btn-danger' %>
                          
                </div>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
  </div><!--/span-->
</div><!--/row-->
