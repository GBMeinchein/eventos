<%- model_class = Evento -%>
<div class="page-header">
  <h1><%= @evento.titulo %></h1>
</div>

<dl class="dl-horizontal">
  <table class="table table-striped">
    <tbody>
  <td>
      <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
      <dd><li><%= link_to t('.show', :default => t(@evento.local.nome)),
                  local_path(@evento.local) if @evento.local.present?%></li></dd>
      <dt><strong><%= model_class.human_attribute_name(:inicio) %>:</strong></dt>
      <dd><%= @evento.inicio.strftime("%m/%d/%Y") %></dd>
      <dt><strong><%= model_class.human_attribute_name(:termino) %>:</strong></dt>
      <dd><%= @evento.termino.strftime("%m/%d/%Y") %></dd>
      <dt><strong><%='Criado por:'%></strong></dt>  
      <dd><%= @evento.login.nome  %></dd>
      <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
      <dd><%= @evento.descricao %></dd> 

  </td>  
</body>

</table>
  <table class="table table-striped">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <a href="#" class="thumbnail">
            <img src=<%=@evento.imagem_url%> alt=""%>
          </a>
        </div>
      </div>
</table>

</dl>

<%= link_to "https://www.facebook.com/sharer/sharer.php?u=" + request.original_url, :target => "_blank", :style=>"color:#fff;", class: "btn btn-facebook"  do %>
<i class="fa fa-facebook"></i>
  | Compartilhar com Facebook
<% end %> 

<div class="pull-right">
  <%= link_to t('.back', :default => t("helpers.links.back")),
                eventos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_evento_path(@evento), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                evento_path(@evento),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>