<%= javascript_include_tag 'application' %>

<%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?key=AIzaSyCIwqtOC58w8tcq4S5lgqnt82sUVUKV7XY&sensor=true' %>

<script>
  jQuery(function() {
    <%= @map.to_js %>
  })
</script>

<p id="notice"><%= notice %></p>

<h1>Listing Locals</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.nome %></td>
        <td><%= local.cidade.nome if local.cidade.present? %></td>
        <td><%= local.cidade.estado.siglaEstado if local.cidade.present? %></td>
        <td><%= link_to 'Listar', local %></td>
        <td><%= link_to 'Editar', edit_local_path(local) %></td>
        <td><%= link_to 'Excluir', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Local', new_local_path %>
